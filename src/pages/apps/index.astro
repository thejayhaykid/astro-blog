---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { Button } from "@/components/ui/button";

// Page metadata
const title = "Apps";
const description = "Apps I've built";

// Content variables
const badgeText = "What's new";
const badgeSubtext = "GymClock just shipped the beta!";
const heroTitle = "Apps that solve real problems";
const heroDescription = "I start with trying to fix my own problems. GymClock is just the beginning.";

// Button content
const primaryButtonText = "Get in touch";
const primaryButtonHref = "/contact";
const secondaryButtonText = "More about me";
const secondaryButtonHref = "/about";

// Placeholder content
const placeholderText = "App screenshots coming soon";

---

<BaseLayout title={title} description={description}>
  <main
    class="flex flex-col gap-4 align-middle items-center justify-center w-screen bg-background text-foreground min-h-[var(--screen-height)] mt-20"
  >
    <div class="relative isolate overflow-hidden bg-background">
      <div class="mx-auto max-w-7xl px-6 pt-10 pb-24 sm:pb-32 lg:flex lg:px-8 lg:py-40">
        <div class="mx-auto max-w-2xl lg:mx-0 lg:shrink-0 lg:pt-8">
          <div class="mt-24 sm:mt-32 lg:mt-16">
            <a href="/apps/gym-clock/beta" class="inline-flex space-x-6">
              <span class="rounded-full bg-highlight/10 px-3 py-1 text-sm/6 font-semibold text-highlight ring-1 ring-highlight/20 ring-inset">{badgeText}</span>
              <span class="inline-flex items-center space-x-2 text-sm/6 font-medium text-secondary-foreground">
                <span>{badgeSubtext}</span>
                <svg viewBox="0 0 20 20" fill="currentColor" data-slot="icon" aria-hidden="true" class="size-5 text-muted-foreground">
                  <path d="M8.22 5.22a.75.75 0 0 1 1.06 0l4.25 4.25a.75.75 0 0 1 0 1.06l-4.25 4.25a.75.75 0 0 1-1.06-1.06L11.94 10 8.22 6.28a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd" fill-rule="evenodd" />
                </svg>
              </span>
            </a>
          </div>
          <h1 class="mt-10 text-5xl font-semibold tracking-tight text-pretty text-foreground sm:text-7xl">{heroTitle}</h1>
          <p class="mt-8 text-lg font-medium text-pretty text-secondary-foreground sm:text-xl/8">{heroDescription}</p>
          <div class="mt-10 flex items-center gap-x-6">
            <Button variant="highlight">
              <a href={primaryButtonHref}>{primaryButtonText}</a>
            </Button>
            <Button variant="link">
              <a href={secondaryButtonHref}>{secondaryButtonText} <span aria-hidden="true">â†’</span></a>
            </Button>
          </div>
        </div>
        <div class="mx-auto mt-16 flex max-w-2xl sm:mt-24 lg:mt-0 lg:mr-0 lg:ml-10 lg:max-w-none lg:flex-none xl:ml-32">
          <div class="max-w-3xl flex-none sm:max-w-5xl lg:max-w-none">
            <div class="-m-2 rounded-xl bg-muted/5 p-2 ring-1 ring-border ring-inset lg:-m-4 lg:rounded-2xl lg:p-4">
              <div class="w-304 h-72 rounded-md bg-muted shadow-xl ring-1 ring-border flex items-center justify-center">
                <div class="text-center">
                  <svg class="w-16 h-16 mx-auto text-muted-foreground mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                  </svg>
                  <p class="text-muted-foreground">{placeholderText}</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>