import Hero from "@/components/services/Hero.astro";
import gymClockHero from "@/assets/apps/gym-clock/App Icon Square 3x.png";
---

<BaseLayout
  title="GymClock"
  description="A wall-style workout clock and timer built for Apple TV."
>
  <main>
    <Hero
      title="GymClock for Apple TV"
      description="Big, glanceable timing for home and garage gyms â€” wall clock, stopwatch with laps, and custom countdowns."
