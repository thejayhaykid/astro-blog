---
import { Image } from "astro:assets";
import Testimonial from "../components/services/Testimonial.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import BlogSection from "../components/BlogSection.astro";
import { SITE_DESCRIPTION } from "../consts";
import HomeServices from "../components/HomeServices.astro";

import tipnap from "../assets/home/tip-nap.jpg";
import wedding from "../assets/home/will-aly-wedding.jpeg";
import me from "../assets/home/me-sm.png";
import lake from "../assets/home/harp-beach.jpg";
import cj from "../assets/home/disney-parade.jpg";
---

<BaseLayout title='Home' description={SITE_DESCRIPTION} prefetchImages={[tipnap, wedding, me, lake, cj]}>
    <div class="bg-primary min-h-[var(--screen-height)]">
      <main>
        <div
          class="absolute left-1/2 right-0 top-0 -z-10 -ml-24 transform-gpu overflow-hidden blur-3xl lg:ml-24 xl:ml-48"
          aria-hidden="true"
        >
          <div
            class="aspect-[801/1036] w-[50.0625rem] bg-gradient-to-tr from-[#ff80b5] to-[#9089fc] opacity-30"
            style="clip-path: polygon(63.1% 29.5%, 100% 17.1%, 76.6% 3%, 48.4% 0%, 44.6% 4.7%, 54.5% 25.3%, 59.8% 49%, 55.2% 57.8%, 44.4% 57.2%, 27.8% 47.9%, 35.1% 81.5%, 0% 97.7%, 39.2% 100%, 35.2% 81.4%, 97.2% 52.8%, 63.1% 29.5%)"
          >
          </div>
        </div>
        <div class="overflow-hidden">
          <div
            class="mx-auto max-w-7xl px-6 pb-32 pt-36 sm:pt-60 lg:px-8 lg:pt-32"
          >
            <div
              class="mx-auto max-w-2xl gap-x-14 lg:mx-0 lg:flex lg:max-w-none lg:items-center"
            >
              <div class="w-full max-w-xl lg:shrink-0 xl:max-w-2xl">
                <h1
                  class="text-4xl font-bold tracking-tight text-primary sm:text-6xl"
                >
                  Hey.
                </h1>
                <p
                  class="relative mt-6 text-lg leading-8 text-secondary sm:max-w-md lg:max-w-none"
                >
                  I’m a Staff Software Engineer with over a decade of experience
                  building scalable, user-focused software. I’ve led projects
                  across early-stage startups and established platforms — from
                  shipping MVPs to overhauling complex systems. I care deeply
                  about clarity, quality, and momentum, and I bring that mindset
                  to every app I build and every team I support.
                </p>
                <p
                  class="relative mt-6 text-lg leading-8 text-secondary sm:max-w-md lg:max-w-none"
                >
                  Now, I'm channeling that experience into launching my own
                  products and helping founders make smarter technical decisions
                  without slowing down.
                </p>
                <div class="mt-10 flex items-center gap-x-6">
                  <a href="/contact" class="btn btn-primary">Contact me</a>
                  <a
                    href="/about"
                    class="text-sm font-semibold leading-6 text-primary"
                    >More about me <span aria-hidden="true">→</span></a
                  >
                </div>
              </div>
              <div
                class="mt-14 flex justify-end gap-8 sm:-mt-44 sm:justify-start sm:pl-20 lg:mt-0 lg:pl-0"
              >
                <div
                  class="ml-auto w-44 flex-none space-y-8 pt-32 sm:ml-0 sm:pt-80 lg:order-last lg:pt-36 xl:order-none xl:pt-80"
                >
                  <div class="relative">
                    <Image
                      src={tipnap}
                      alt=""
                      class="aspect-[2/3] w-full rounded-xl bg-gray-900/5 object-cover shadow-lg"
                      loading="eager"
                      transition:animate="fade"
                    />
                    <div
                      class="pointer-events-none absolute inset-0 rounded-xl ring-1 ring-inset ring-gray-900/10"
                    >
                    </div>
                  </div>
                </div>
                <div
                  class="mr-auto w-44 flex-none space-y-8 sm:mr-0 sm:pt-52 lg:pt-36"
                >
                  <div class="relative">
                    <Image
                      src={wedding}
                      alt=""
                      class="aspect-[2/3] w-full rounded-xl bg-gray-900/5 object-cover shadow-lg"
                      loading="eager"
                      transition:animate="fade"
                    />
                    <div
                      class="pointer-events-none absolute inset-0 rounded-xl ring-1 ring-inset ring-gray-900/10"
                    >
                    </div>
                  </div>
                  <div class="relative">
                    <Image
                      src={me}
                      alt=""
                      class="aspect-[2/3] w-full rounded-xl bg-gray-900/5 object-cover shadow-lg"
                      loading="eager"
                      transition:animate="fade"
                    />
                    <div
                      class="pointer-events-none absolute inset-0 rounded-xl ring-1 ring-inset ring-gray-900/10"
                    >
                    </div>
                  </div>
                </div>
                <div class="w-44 flex-none space-y-8 pt-32 sm:pt-0">
                  <div class="relative">
                    <Image
                      src={lake}
                      alt=""
                      class="aspect-[2/3] w-full rounded-xl bg-gray-900/5 object-cover shadow-lg"
                      loading="eager"
                      transition:animate="fade"
                    />
                    <div
                      class="pointer-events-none absolute inset-0 rounded-xl ring-1 ring-inset ring-gray-900/10"
                    >
                    </div>
                  </div>
                  <div class="relative">
                    <Image
                      src={cj}
                      alt=""
                      class="aspect-[2/3] w-full rounded-xl bg-gray-900/5 object-cover shadow-lg"
                      transition:animate="fade"
                      loading="eager"
                    />
                    <div
                      class="pointer-events-none absolute inset-0 rounded-xl ring-1 ring-inset ring-gray-900/10"
                    >
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
    <BlogSection />
    <HomeServices />
    <Testimonial />
   </BaseLayout>
