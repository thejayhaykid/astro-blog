---
export interface Props {
  date: Date;
  classStr?: string;
}

const { date, classStr = "" } = Astro.props;
---

<time datetime={date.toISOString()} class={classStr}>
  {
    date.toLocaleDateString("en-us", {
      year: "numeric",
      month: "short",
      day: "numeric",
    })
  }
</time>
