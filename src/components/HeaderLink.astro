---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"a">;

const { href, class: className, ...props } = Astro.props;

const { pathname } = Astro.url;
const isActive = href === pathname || href === pathname.replace(/\/$/, "");
---

<div>
  <a
    href={href}
    class:list={[
      className,
      { active: isActive },
      "p-4 md:flex md:justify-between decoration-none md:mx-4 bg-clear text-primary hover:bg-gray-100 rounded hover:drop-shadow dark:hover:bg-gray-700 dark:hover:text-gray-100",
    ]}
    {...props}
  >
    <slot />
  </a>
  <style>
    a.active {
      font-weight: bolder;
      text-decoration: underline;
    }
  </style>
</div>
