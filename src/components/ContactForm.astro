---

<form
  netlify
  netlify-honeypot
  name="contact"
  method="POST"
  class="flex flex-col lg:max-w-700 rounded-md justify-center align-middle max-w-full"
>
  <p class="hidden">
    <label>
      Don’t fill this out if you’re human: <input name="bot-field" />
    </label>
  </p>
  <input type="hidden" name="form-name" value="contact" />
  <div class="flex md:flex-row md:gap-1 justify-between w-full flex-col pt-4">
    <div class="flex flex-col flex-nowrap w-full">
      <label for="name">Name</label>
      <input
        type="text"
        name="name"
        placeholder="Your name"
        required
        class="p-1 rounded-md border border-gray-400 w-full text-gray-800"
      />
    </div>
    <div class="flex flex-col flex-nowrap w-full">
      <label for="email">Email</label>
      <input
        placeholder="Email"
        type="email"
        name="email"
        required
        class="p-1 rounded-md border border-gray-400 sm:w-full text-gray-800"
      />
    </div>
  </div>
  <label class="pt-4" for="subject">Subject</label>
  <input
    type="text"
    name="subject"
    placeholder="Subject"
    class="p-1 pb-4 rounded-md border border-gray-400 sm:w-full text-gray-800"
  />
  <label class="m-1" for="message">Message</label>
  <textarea
    name="message"
    placeholder="Message"
    required
    class="p-1 rounded-md border border-gray-400 text-gray-800"></textarea>
  <button
    type="submit"
    class="p-1 mt-4 rounded-md cursor-pointer bg-blue-700 hover:bg-blue-800 active:bg-blue-900 text-white md:max-w-25 disabled:bg-blue-400 disabled:cursor-not-allowed"
    >Send</button
  >
</form>
