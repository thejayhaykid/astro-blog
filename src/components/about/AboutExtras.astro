---
import Icon, { IconName } from "../Icon";

interface Action {
  title: string;
  href: string;
  icon: IconName;
  description: string;
}

const actions: Action[] = [
  {
    title: "Blog",
    href: "/blog",
    icon: IconName.WRITING,
    description:
      "Check out my latest posts and articles about web development, programming, and technology.",
  },
  {
    title: "Services",
    href: "/services",
    icon: IconName.SERVICES,
    description:
      "Looking for a freelance developer? Learn more about how I can help with your next project.",
  },
  {
    title: "Resume",
    href: "/resume",
    icon: IconName.ACADEMIC_CAP,
    description:
      "View my professional experience, skills, and qualifications in a more traditional format.",
  },
  {
    title: "Contact",
    href: "/contact",
    icon: IconName.USERS,
    description:
      "Have a question or want to work together? Get in touch with me through my contact form.",
  },
];
---

<div class="bg-background py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div
      class="-mx-6 grid grid-cols-2 gap-0.5 overflow-hidden sm:mx-0 md:grid-cols-3"
    >
      {
        actions.map((action) => (
          <a
            href={action.href}
            class="bg-muted/50 p-6 sm:p-10 group hover:bg-muted/70 hover:scale-105 transition-all duration-300 ease-in-out"
          >
            <div class="flex flex-col items-center text-center">
              <div class="mb-2">
                <Icon name={action.icon} classStr="w-12 h-12 text-foreground" />
              </div>
              <h3 class="text-sm font-medium text-foreground group-hover:text-primary transition-colors">
                {action.title}
              </h3>
              <p class="text-xs text-muted-foreground mt-1">
                {action.description}
              </p>
            </div>
          </a>
        ))
      }
    </div>
  </div>
</div>
