---
import type { Link } from "../types/Link.types";

export interface Props {
  links: Link[];
}

const { links } = Astro.props;
---

<ul
  role="list"
  class="divide-y divide-gray-100 dark:divide-gray-500 overflow-hidden bg-background shadow-sm ring-1 ring-gray-900/5 dark:ring-gray-400 md:rounded-xl w-screen md:w-[500px]"
>
  {
    links.map((link: Link) => (
      <li class="relative flex justify-between gap-x-6 px-4 py-5 hover:bg-gray-50 dark:hover:bg-gray-800 sm:px-6">
        <div class="flex min-w-0 gap-x-4">
          <img
            class="h-12 w-12 flex-none rounded-full bg-gray-50 object-scale-down"
            src={link.imageUrl}
            alt={link.primaryHeader}
          />
          <div class="min-w-0 flex-auto">
            <p class="text-sm font-semibold leading-6 text-gray-900 dark:text-gray-100">
              <a href={link.linkUrl}>
                <span class="absolute inset-x-0 -top-px bottom-0" />
                {link.primaryHeader}
              </a>
            </p>
            <p class="mt-1 flex text-xs leading-5 text-gray-500">
              {link.secondaryHeader}
            </p>
          </div>
        </div>
        <div class="flex shrink-0 items-center gap-x-4">
          <div class="hidden sm:flex sm:flex-col sm:items-end">
            <p class="text-sm leading-6 text-foreground">{link.sideText1 || ""}</p>
            <p class="mt-1 text-xs leading-5 text-gray-500 dark:text-gray-200">
              {link.sideText2 || ""}
            </p>
          </div>
          <svg
            class="h-5 w-5 flex-none text-gray-400 dark:text-gray-100"
            viewBox="0 0 20 20"
            fill="currentColor"
            aria-hidden="true"
          >
            <path
              fill-rule="evenodd"
              d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z"
              clip-rule="evenodd"
            />
          </svg>
        </div>
      </li>
    ))
  }
</ul>
