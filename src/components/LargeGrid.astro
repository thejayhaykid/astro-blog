---
import type { GridTestimonial } from "../types/About.types";
import minidenticon from "../utils/identicon";
import Icon from "./Icon";

interface Props {
  title: string;
  subtitle: string;
  featuredTestimonial: GridTestimonial;
  testimonials: GridTestimonial[][][];
}

const { title, subtitle, featuredTestimonial, testimonials } = Astro.props;
---

<div class="relative isolate bg-background pt-24 pb-32 sm:pt-32">
  <div
    aria-hidden="true"
    class="absolute inset-x-0 top-1/2 -z-10 -translate-y-1/2 transform-gpu overflow-hidden opacity-30 blur-3xl"
  >
    <div
      style={{
        clipPath:
          "polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)",
      }}
      class="ml-[max(50%,38rem)] aspect-1313/771 w-328.25 bg-linear-to-tr from-[#ff80b5] to-highlight"
    >
    </div>
  </div>
  <div
    aria-hidden="true"
    class="absolute inset-x-0 top-0 -z-10 flex transform-gpu overflow-hidden pt-32 opacity-25 blur-3xl sm:pt-40 xl:justify-end"
  >
    <div
      style={{
        clipPath:
          "polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)",
      }}
      class="-ml-88 aspect-1313/771 w-328.25 flex-none origin-top-right rotate-30 bg-linear-to-tr from-[#ff80b5] to-highlight xl:mr-[calc(50%-12rem)] xl:ml-0"
    >
    </div>
  </div>
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
      <h2 class="text-base/7 font-semibold text-highlight">{title}</h2>
      <p
        class="mt-2 text-4xl font-semibold tracking-tight text-balance text-foreground sm:text-5xl"
      >
        {subtitle}
      </p>
    </div>
    <div
      class="mx-auto mt-16 grid max-w-2xl grid-cols-1 grid-rows-1 gap-8 text-sm/6 text-foreground sm:mt-20 sm:grid-cols-2 xl:mx-0 xl:max-w-none xl:grid-flow-col xl:grid-cols-4"
    >
      <figure
        class="rounded-2xl bg-background shadow-lg ring-1 ring-gray-900/5 sm:col-span-2 xl:col-start-2 xl:row-end-1"
      >
        <div
          class="p-6 text-lg font-semibold tracking-tight text-foreground sm:p-12 sm:text-xl/8"
        >
          <p>{featuredTestimonial.body}</p>
        </div>
        {
          featuredTestimonial.author && (
            <figcaption class="flex flex-wrap items-center gap-x-4 gap-y-4 border-t border-secondary px-6 py-4 sm:flex-nowrap">
              <img
                alt={featuredTestimonial.author.name}
                src={
                  featuredTestimonial.author.imageUrl ||
                  `data:image/svg+xml;utf8,${encodeURIComponent(
                    minidenticon(
                      featuredTestimonial.author.handle ||
                        featuredTestimonial.author.name
                    )
                  )}`
                }
                class="size-10 flex-none rounded-full bg-secondary"
              />
              <div class="flex-auto">
                <div class="font-semibold text-foreground">
                  {featuredTestimonial.author.name}
                </div>
                <div class="text-secondary-foreground">
                  {`@${featuredTestimonial.author.handle}`}
                </div>
              </div>
              {featuredTestimonial.author.logoUrl && (
                <img
                  alt=""
                  src={featuredTestimonial.author.logoUrl}
                  class="h-10 w-auto flex-none"
                />
              )}
            </figcaption>
          )
        }
      </figure>
      {
        testimonials.map((columnGroup, columnGroupIdx) => (
          <div class="space-y-8 xl:contents xl:space-y-0">
            {columnGroup.map((column, columnIdx) => (
              <div
                class={`${
                  (columnGroupIdx === 0 && columnIdx === 0) ||
                  (columnGroupIdx === testimonials.length - 1 &&
                    columnIdx === columnGroup.length - 1)
                    ? "xl:row-span-2"
                    : "xl:row-start-1"
                } space-y-8`}
              >
                {column.map((testimonial) => (
                  <figure class="rounded-2xl bg-background p-6 shadow-lg ring-1 ring-gray-900/5">
                    {testimonial.icon && (
                      <div class="mb-4 flex h-10 w-10 items-center justify-center rounded-full bg-secondary">
                        <Icon name={testimonial.icon} />
                      </div>
                    )}
                    {testimonial.title && (
                      <h3 class="font-semibold text-foreground">
                        {testimonial.title}
                      </h3>
                    )}
                    <div class="text-foreground">
                      <p>{testimonial.body}</p>
                    </div>
                    {testimonial.imageUrl && (
                      <img
                        alt=""
                        src={testimonial.imageUrl}
                        class="mt-6 aspect-video w-full rounded-lg object-cover"
                      />
                    )}
                    {testimonial.author && (
                      <figcaption class="mt-6 flex items-center gap-x-4">
                        <img
                          alt={testimonial.author.name}
                          src={
                            testimonial.author.imageUrl ||
                            `data:image/svg+xml;utf8,${encodeURIComponent(
                              minidenticon(
                                testimonial.author.handle ||
                                  testimonial.author.name
                              )
                            )}`
                          }
                          class="size-10 rounded-full bg-secondary"
                        />
                        <div>
                          <div class="font-semibold text-foreground">
                            {testimonial.author.name}
                          </div>
                          <div class="text-secondary-foreground">{`@${testimonial.author.handle}`}</div>
                        </div>
                      </figcaption>
                    )}
                  </figure>
                ))}
              </div>
            ))}
          </div>
        ))
      }
    </div>
  </div>
</div>
