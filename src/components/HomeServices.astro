---
import { Button } from "@/components/ui/button";
import type { Service } from "../types/Services.types";
const services: Service[] = [
  {
    title: "Technical Consulting",
    description:
      "Guidance for early-stage founders and small teams building real-world software.",
    features: [
      "Architecture reviews and scaling strategy",
      "MVP scoping and technical planning",
      "Fractional technical leadership (without the bloat)",
      "Clear, actionable advice from a Staff Engineer",
    ],
    url: "/services/consulting",
    primary: false,
  },
  {
    title: "Indie App Development",
    description:
      "I build and launch focused utility apps â€” starting with a Gym Clock for Apple TV.",
    features: [
      "SwiftUI + tvOS product development",
      "Designing for simplicity and usability",
      "Real-world app lessons shared as I build",
      "Apps shaped by firsthand pain points",
    ],
    url: "/services/custom-software",
    primary: false,
  },
  {
    title: "And more",
    description:
      "Given my years of experience, there are a lot of other things I can help with",
    features: [
      "Professional Mentoring and Leadership",
      "Technical Writing",
      "Blog Posts",
      "A React Subject Matter Expert",
      "A Shopify Partner",
      "Web Development Consulting",
    ],
    url: "/services",
    primary: true,
  },
];
---

<div class="bg-background text-foreground py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-4xl text-center">
      <h2 class="text-base font-semibold leading-7 text-highlight">Services</h2>
      <p
        class="mt-2 text-4xl font-bold tracking-tight text-foreground sm:text-5xl"
      >
        What do I do for you?
      </p>
    </div>
    <p
      class="mx-auto mt-6 max-w-2xl text-center text-lg leading-8 text-secondary-foreground"
    >
      Even if you don't find what you're looking for, I'm sure I can help you
    </p>
    <div
      class="isolate mx-auto mt-10 flex flex-wrap max-w-md grid-cols-1 gap-8 md:max-w-2xl md:grid-cols-2 lg:max-w-4xl xl:mx-0 xl:max-w-none xl:grid-cols-4"
    >
      {
        services.map((service) => (
          <div
            class={`
      ${service.primary ? "ring-2" : "ring-1"}
      rounded-3xl p-8 max-w-sm ring-highlight  
    `}
          >
            <h3
              id="tier-hobby"
              class={`text-lg font-semibold leading-8 ${
                service.primary ? "text-highlight" : "text-foreground"
              }`}
            >
              {service.title}
            </h3>
            <p class="mt-4 text-sm h-20 leading-6 text-secondary-foreground">
              {service.description}
            </p>
            <Button 
              variant={service.primary ? "highlight" : "outline"} 
              className="mt-6 block w-full text-center"
              >
                <a href={service.url}>
              See more
                </a>
            </Button>
            <ul
              role="list"
              class="mt-8 space-y-3 text-sm leading-6 text-muted-foreground"
            >
              {service.features.map((feature) => (
                <li class="flex gap-x-3">
                  <svg
                    class="h-6 w-5 flex-none text-highlight"
                    viewBox="0 0 20 20"
                    fill="currentColor"
                    aria-hidden="true"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z"
                      clip-rule="evenodd"
                    />
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>
  </div>
</div>
