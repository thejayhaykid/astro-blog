---
type Plan = {
  id: string;
  name: string;
  price: number;
  priceUnit: string;
  buyLink: string;
  description: string;
  features: string[];
  highlight: boolean;
  highlightText: string;
  color: string;
};
const plans: Plan[] = [
  {
    id: "basic",
    name: "Basic",
    price: 49,
    priceUnit: "/mo",
    buyLink: "/contact",
    description: "Essential hosting and security coverage for peace of mind.",
    features: [
      "Hosting included (Netlify/Vercel)",
      "Security patches & SSL",
      "Uptime monitoring"
    ],
    highlight: false,
    highlightText: "",
    color: "gray"
  },
  {
    id: "standard",
    name: "Standard",
    price: 149,
    priceUnit: "/mo",
    buyLink: "/contact",
    description: "Great for small businesses that need regular updates and maintenance.",
    features: [
      "Everything in Basic",
      "Monthly content updates (1 hr included)",
      "Dependency & plugin updates"
    ],
    highlight: true,
    highlightText: "Most Popular",
    color: "indigo"
  },
  {
    id: "premium",
    name: "Premium",
    price: 299,
    priceUnit: "/mo",
    buyLink: "/contact",
    description: "Priority support and more included time for businesses that rely heavily on their site.",
    features: [
      "Everything in Standard",
      "Priority support",
      "Up to 3 hrs/month included",
      "Proactive SEO & analytics checks"
    ],
    highlight: false,
    highlightText: "",
    color: "emerald"
  }
];

---
<div class="bg-background py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8 bg-background">
    <div class="mx-auto max-w-4xl text-center">
      <h2 class="text-base/7 font-semibold text-highlight">Pricing</h2>
      <p class="mt-2 text-5xl font-semibold tracking-tight text-balance text-foreground sm:text-6xl">Website Care Plans</p>
    </div>
    <p class="mx-auto mt-6 max-w-2xl text-center text-lg font-medium text-pretty text-secondary-foreground sm:text-xl/8 dark:text-secondary-foreground">Keep your website fast, secure, and stress-free. I handle hosting, updates, and ongoing maintenance so you can focus on running your business while your site stays healthy and reliable.
</p>
    <div class="isolate mx-auto mt-16 grid max-w-md grid-cols-1 gap-y-8 sm:mt-20 lg:mx-0 lg:max-w-none lg:grid-cols-3">
      {plans.map(plan => (
  <div class={`flex flex-col justify-between rounded-3xl bg-secondary p-8 inset-ring border border-primary xl:p-10 dark:border-primary dark:inset-ring-gray-700 ${plan.id === 'basic' ? '-mr-px lg:mt-8 lg:rounded-r-none' : ''} ${plan.id === 'premium' ? '-ml-px lg:mt-8 lg:rounded-l-none' : ''} ${plan.highlight ? 'lg:z-10 lg:rounded-b-none' : ''}`}>
          <div>
            <div class="flex items-center justify-between gap-x-4">
              <h3 id={`tier-${plan.id}`} class="text-lg/8 font-semibold text-highlight dark:text-highlight">{plan.name}</h3>
              {plan.highlight && (
                <p class="rounded-full bg-highlight/10 px-2.5 py-1 text-xs/5 font-semibold text-highlight dark:bg-highlight/10 dark:text-highlight">{plan.highlightText}</p>
              )}
            </div>
            <p class="mt-4 text-sm/6 text-secondary-foreground dark:text-secondary-foreground">{plan.description}</p>
            <p class="mt-6 flex items-baseline gap-x-1">
              <span class="text-4xl font-semibold tracking-tight text-foreground">${plan.price}</span>
              <span class="text-sm/6 font-semibold text-secondary-foreground">{plan.priceUnit}</span>
            </p>
            <ul role="list" class="mt-8 space-y-3 text-sm/6 text-secondary-foreground dark:text-secondary-foreground">
              {plan.features.map(feature => (
                <li class="flex gap-x-3">
                  <svg viewBox="0 0 20 20" fill="currentColor" data-slot="icon" aria-hidden="true" class="h-6 w-5 flex-none text-highlight dark:text-highlight">
                    <path d="M16.704 4.153a.75.75 0 0 1 .143 1.052l-8 10.5a.75.75 0 0 1-1.127.075l-4.5-4.5a.75.75 0 0 1 1.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 0 1 1.05-.143Z" clip-rule="evenodd" fill-rule="evenodd" />
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>
          </div>
        </div>
      ))}
    </div>
  </div>
</div>
