---
import PillButton from "../../PillButton.astro";
import niagra from '../../../assets/services/niagra.png'
import { Image } from "astro:assets";

const { 
  title = "Software Consulting Services",
  description = "Whether you're scaling a team, reviewing your architecture, or just need a second set of eyes on a decision, I provide pragmatic consulting to help you move forward with confidence.",
  primaryButtonText = "Contact me",
  primaryButtonHref = "/contact?subject=Consult&message=I%20would%20like%20to%20talk%20to%20you%20about%20consulting",
  secondaryButtonText = "More about me",
  secondaryButtonHref = "/about",
  image = niagra,
  imageAlt = "",
  showPillButton = true,
} = Astro.props;
---

<div class="bg-primary">
  <div class="relative">
    <div class="mx-auto max-w-7xl">
      <div class="relative z-10 pt-14 lg:w-full lg:max-w-2xl">
        <svg
          class="absolute inset-y-0 right-8 hidden h-full w-80 translate-x-1/2 transform fill-current lg:block text-invert"
          viewBox="0 0 100 100"
          preserveAspectRatio="none"
          aria-hidden="true"
        >
          <polygon points="0,0 90,0 50,100 0,100"></polygon>
        </svg>

        <div class="relative px-6 py-32 sm:py-40 lg:px-8 lg:py-56 lg:pr-0">
          <div class="mx-auto max-w-2xl lg:mx-0 lg:max-w-xl">
            {showPillButton && (
              <div class="hidden sm:mb-10 sm:flex">
                <PillButton />
              </div>
            )}
            <h1
              class="text-4xl font-bold tracking-tight text-primary sm:text-6xl"
            >
            {title}
            </h1>
            <p class="mt-6 text-lg leading-8 text-secondary">
              {description}
            </p>
            <div class="mt-10 flex items-center gap-x-6">
              <a
                href={primaryButtonHref}
                class="btn btn-primary">{primaryButtonText}</a
              >
              <a
                href={secondaryButtonHref}
                class="text-sm font-semibold leading-6 text-primary"
                >{secondaryButtonText} <span aria-hidden="true">â†’</span></a
              >
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="bg-gray-50 lg:absolute lg:inset-y-0 lg:right-0 lg:w-1/2">
      <Image
        class="aspect-[3/2] object-cover lg:aspect-auto lg:h-full lg:w-full"
        src={image}
        alt={imageAlt}
      />
    </div>
  </div>
</div>
