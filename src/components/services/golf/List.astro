const {
  sectionHeadline = "Everything you want",
  sectionTitle = "I'll do what you need",
  sectionDesc = "With years of experience consulting, designing, and developing web I can get it done for you.",
  image = closeup,
  features = [],
} = Astro.props;
---

<div class="bg-primary py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl sm:text-center">
      <h2 class="text-base font-semibold leading-7 text-highlight">{sectionHeadline}</h2>
      <p class="mt-2 text-3xl font-bold tracking-tight text-primary sm:text-4xl">{sectionTitle}</p>
      <p class="mt-6 text-lg leading-8 text-secondary">{sectionDesc}</p>
    </div>
  </div>
  <div class="relative overflow-hidden pt-16">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <Image
        src={image}
        alt="Hero image"
        class="mb-[-12%] rounded-xl shadow-2xl ring-1 ring-gray-900/10 bg-primary"
        width={image.width}
        height={image.height}
        loading={image.loading || "eager"}
      />
      <div class="relative" aria-hidden="true">
        <div class="absolute -inset-x-20 bottom-0 bg-gradient-to-t from-[#f9f9f9] dark:from-[#111827] pt-[7%]"></div>
      </div>
    </div>
  </div>
  <div class="mx-auto mt-16 max-w-7xl px-6 sm:mt-20 md:mt-24 lg:px-8">
    <dl class="mx-auto grid max-w-2xl grid-cols-1 gap-x-6 gap-y-10 text-base leading-7 text-secondary sm:grid-cols-2 lg:mx-0 lg:max-w-none lg:grid-cols-3 lg:gap-x-8 lg:gap-y-16">
      {features.map((feature: {title: string, desc: string, icon: IconType}) => (
        <div class="relative pl-9">
          <dt class="inline font-semibold text-primary">
            <span set:html={iconLookup[feature.icon]}></span>
            {feature.title}
          </dt>
          <dd class="inline">{feature.desc}</dd>
        </div>
      ))}
    </dl>
  </div>
</div>
