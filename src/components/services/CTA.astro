---
import { Button } from "@/components/ui/button";
import { Image } from "astro:assets";
import me from '../../assets/small-me.png';

const defaultHeadline = "Ready to dive in?";
const defaultText = "Contact me today to discuss your project and how I can help bring your vision to life.";
const defaultButtonText = "Reach out";

const { headline = defaultHeadline, text = defaultText, buttonText = defaultButtonText } = Astro.props;
---

<div class="bg-background w-full">
  <div
    class="mx-auto max-w-7xl px-6 py-24 sm:py-32 lg:flex lg:items-center lg:justify-between lg:px-8 md:justify-between"
  >
  <div class="flex flex-col md:flex-row items-center gap-x-6 lg:flex-1">
      <Image
        class="h-24 w-auto rounded-full mb-4 md:mb-0"
        src={me}
        alt="Jake Hayes Logo"
      />
    <div>
      <h2 class="text-3xl font-bold tracking-tight text-foreground sm:text-4xl">
        {headline}
      </h2>
      <p class="mt-6 max-w-3xl text-lg leading-8 text-secondary-foreground">
        {text}
      </p>
    </div>
    </div>
    <div class="mt-10 flex items-center gap-x-6 lg:mt-0 lg:shrink-0">
      <Button variant="highlight">
        <a href="/contact">{buttonText}</a>
      </Button>
      <Button variant="link">
        <a href="/about">Learn more <span aria-hidden="true">â†’</span></a>
      </Button>
    </div>
  </div>
</div>
