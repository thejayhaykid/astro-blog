---
import PricingCard from "../PricingCard.astro";
import type { PricingCard as PriceType } from "../../../types/PricingCard.type";

const products: PriceType[] = [
  {
    title: "Blog Post",
    subtitle: "Give me a topic",
    price: 100,
    monthly: false,
    starting: true,
    features: [
      "A free upfront estimate based on the project",
      "Willing to work with a new technology",
    ],
  },
  {
    title: "Technical Documentation",
    subtitle: "Get your API Documented and Usable",
    price: 500,
    monthly: false,
    starting: true,
    features: [
      "I will read the code and make a documentation website",
      "Extend your existing docs for new features or versions",
      "Often the least fun part of writing code, outsource it to me",
    ],
  },
];
---

<div class="bg-primary py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-4xl text-center">
      <h2 class="text-base font-semibold leading-7 text-highligh">Pricing</h2>
      <p
        class="mt-2 text-4xl font-bold tracking-tight text-primary sm:text-5xl"
      >
        How can I help?
      </p>
    </div>
    <p
      class="mx-auto mt-6 max-w-2xl text-center text-lg leading-8 text-secondary"
    >
      There are lots of ways that I can help you out! But if you don't know
      where to start, here are some common things I've helped others out with.
    </p>
    <div
      class="isolate mx-auto mt-10 grid max-w-md grid-cols-1 gap-8 md:max-w-2xl md:grid-cols-2 lg:max-w-4xl"
    >
      {
        products.map((product) => (
          <PricingCard
            title={product.title}
            subtitle={product.subtitle}
            price={product.price}
            monthly={product.monthly}
            hourly={product.hourly || false}
            starting={product.starting}
            features={product.features}
          />
        ))
      }
    </div>
  </div>
</div>
