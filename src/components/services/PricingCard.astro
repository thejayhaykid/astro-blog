---
import type { PricingCard } from "../../types/PricingCard.type";

const { title, subtitle, price, monthly, features }: PricingCard =
  Astro.props as PricingCard;
---

<div class="rounded-3xl bg-primary p-8 ring-1 ring-gray-200 dark:ring-gray-500">
  <h3 id="tier-hobby" class="text-lg font-semibold leading-8 text-primary">
    {title}
  </h3>
  <p class="mt-4 text-sm leading-6 text-secondary">
    {subtitle}
  </p>
  <p class="mt-6 flex items-baseline gap-x-1 mb-6">
    <span class="text-4xl font-bold tracking-tight text-primary">${price}</span>
    {
      monthly && (
        <span class="text-sm font-semibold leading-6 text-secondary">
          /month
        </span>
      )
    }
  </p>
  <a
    href={`/contact?subject=${title}&message=I%20would%20like%20to%20know%20more%20about%20this`}
    aria-describedby={title}
    class="btn btn-primary my-4">Select</a
  >
  <ul role="list" class="mt-8 space-y-3 text-sm leading-6 text-secondary">
    {
      features.map((feature) => (
        <li class="flex gap-x-3">
          <svg
            class="h-6 w-5 flex-none text-highligh"
            viewBox="0 0 20 20"
            fill="currentColor"
            aria-hidden="true"
          >
            <path
              fill-rule="evenodd"
              d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z"
              clip-rule="evenodd"
            />
          </svg>
          {feature}
        </li>
      ))
    }
  </ul>
</div>
