---
import { Image } from "astro:assets";
import PillButton from "../../PillButton.astro";
import { Button } from "@/components/ui/button";
import stacks from "../../../assets/services/smb/stacks.png";

const {
  headline = "Let me be the software engineer for your small business",
  description = "I can provide any of the software services or troubleshooting that your business might need. Everything from web development to software automation, I can help you with it.",
  primaryButtonText = "Contact me",
  primaryButtonHref = "/contact",
  secondaryButtonText = "More about me",
  secondaryButtonHref = "/about",
  image = stacks,
  imageAlt = "This was taken in Thompson Library at The Ohio State University",
  showPillButton = true,
} = Astro.props;
---

<div class="relative bg-background">
  <div class="mx-auto max-w-7xl lg:grid lg:grid-cols-12 lg:gap-x-8 lg:px-8">
    <div
      class="px-6 pb-24 pt-10 sm:pb-32 lg:col-span-7 lg:px-0 lg:pb-56 lg:pt-48 xl:col-span-6"
    >
      <div class="mx-auto max-w-2xl lg:mx-0">
        {showPillButton && (
          <div class="hidden sm:mt-32 sm:flex lg:mt-16">
            <PillButton />
          </div>
        )}
        <h1
          class="mt-24 text-4xl font-bold tracking-tight text-foreground sm:mt-10 sm:text-6xl"
        >
          {headline}
        </h1>
        <p class="mt-6 text-lg leading-8 text-secondary-foreground">
          {description}
        </p>
        <div class="mt-10 flex items-center gap-x-6">
          <Button variant="highlight">
            <a href={primaryButtonHref}>{primaryButtonText}</a>
          </Button>
          <Button variant="link">
          <a href={secondaryButtonHref}
            >{secondaryButtonText} <span aria-hidden="true">â†’</span></a
          ></Button> 
        </div>
      </div>
    </div>
    <div
      class="relative lg:col-span-5 lg:-mr-8 xl:absolute xl:inset-0 xl:left-1/2 xl:mr-0"
    >
      <Image
        class="aspect-3/2 w-full bg-gray-50 object-cover lg:absolute lg:inset-0 lg:aspect-auto lg:h-full"
        src={image}
        alt={imageAlt}
        loading={'eager'}
      />
    </div>
  </div>
</div>
