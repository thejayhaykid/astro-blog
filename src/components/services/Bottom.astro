---
import { Image } from "astro:assets";
import swing from "../../../assets/services/golf/swing.png";
---

<!-- Content section -->
<div class="mx-auto mt-32 max-w-7xl px-6 sm:mt-40 lg:px-8">
  <div
    class="mx-auto flex max-w-2xl flex-col items-end justify-between gap-16 lg:mx-0 lg:max-w-none lg:flex-row"
  >
    <div class="w-full lg:max-w-lg lg:flex-auto">
      <h2 class="text-3xl font-bold tracking-tight text-primary sm:text-4xl">
